[MASTER]

# Disable pylint completely for all files
ignore=*
ignore-patterns=*

# Specify a score threshold to be exceeded before program exits with error.
fail-under=0

# A list of file extensions that should be checked; setting this to empty disables all checking
ignore-extensions=py,pyx,pyd,so

[MESSAGES CONTROL]
# Disable all messages
disable=all

[REPORTS]
# Disable all reporting
output-format=no
reports=no
evaluation=0
